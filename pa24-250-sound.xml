      <squish> 
        <name>Primer</name>
        <path>Sounds/squeal.wav</path>
        <condition>
          <property>sim/sound/prime</property>
        </condition>
        <volume> 
          <factor>0.1</factor>
        </volume>
      </squish>
 
</fx>
 
</PropertyList>
